<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <Button
        android:id="@+id/发帖"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:text="@string/发帖"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/与我相关"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:text="@string/与我相关"
        app:layout_constraintStart_toEndOf="@+id/发帖"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/设置"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_marginStart="4dp"
        android:text="@string/设置"
        app:layout_constraintStart_toEndOf="@+id/与我相关"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/刷新"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/刷新"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/浏览帖子"
        android:layout_width="368dp"
        android:layout_height="382dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/刷新"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/与我相关" />

</android.support.constraint.ConstraintLayout>